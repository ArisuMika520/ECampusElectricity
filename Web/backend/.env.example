# 数据库配置
DATABASE_URL=postgresql://postgres:passwd@localhost:5432/electricity_db

# JWT 认证配置
# 生成密钥: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 配置
# 允许的前端域名，多个用逗号分隔（JSON 数组格式）
CORS_ORIGINS=["http://localhost:4000","http://localhost:3001"]

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# SMTP 邮件配置（可选，也可通过 WebUI 配置）
SMTP_SERVER=smtp.qq.com
SMTP_PORT=465
SMTP_USER=your-email@qq.com
SMTP_PASS=your-email-authorization-code
FROM_EMAIL=your-email@qq.com
USE_TLS=false

# 易校园 API 配置
# 从易校园小程序抓取的 shiroJID（也可通过 WebUI 配置）
SHIRO_JID=your-shiro-jid-here
API_BASE_URL=https://application.xiaofubao.com/app/electric

# 每个订阅保留的历史记录上限
HISTORY_LIMIT=2400